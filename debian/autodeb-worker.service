[Unit]
Description=Autodeb Worker
After=network.target

[Service]
User=autodeb
Group=autodeb
WorkingDirectory=/var/lib/autodeb/worker
EnvironmentFile=/etc/default/autodeb-worker
EnvironmentFile=/etc/autodeb-worker.conf
ExecStart=/usr/bin/autodeb-worker \
                        -server-url=${SERVER_URL} \
                        -working-directory=${WORKING_DIRECTORY} \
                        -log-level=${LOG_LEVEL} \
                        -runner-count=${RUNNER_COUNT} \
                        -access-token=${ACCESS_TOKEN} \
                        ${AUTODEB_WORKER_OPTS}
Restart=on-failure

[Install]
WantedBy=multi-user.target
